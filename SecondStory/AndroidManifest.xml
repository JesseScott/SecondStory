<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theonlyanimal.secondstory"
    android:versionCode="2"
    android:versionName="0.1.6" >

    <!-- SDK  -->
    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="19" 
    />

    <!-- SCREEN SIZES  -->
    <supports-screens
    	android:largeScreens="true"
   		android:normalScreens="true"
   		android:smallScreens="true"
   		android:anyDensity="true" 
    />
    
    <!-- PERMISSIONS USED  -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    
    <!-- FEATURES USED  -->
    <uses-feature android:glEsVersion="0x00020000"/>
    <uses-feature android:name="android.hardware.camera"/>
    
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoActionBarFullscreen" >
        
        <!-- HOCKEY APP -->
        <activity android:name="net.hockeyapp.android.UpdateActivity" />
        <activity android:name="net.hockeyapp.android.FeedbackActivity" />
        
        <!-- SPLASH SCREEN  -->
        <activity
            android:name="com.theonlyanimal.secondstory.SplashScreen"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" 
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>    
        </activity>
        
        <!-- WELCOME SCREEN  -->
        <activity
            android:name="com.theonlyanimal.secondstory.WelcomeScreen"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
         >
            <intent-filter>
                <action android:name="android.intent.action.WELCOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- TUTORIAL SCREEN  -->
        <activity
            android:name="com.theonlyanimal.secondstory.TutorialScreen"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
         >
            <intent-filter>
                <action android:name="android.intent.action.TUTORIAL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- VIDEO SCREEN  -->
        <activity
            android:name="com.theonlyanimal.ar.VideoPlayback"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
 	        android:launchMode="singleTask"
            android:label="@string/app_name"
         >
            <intent-filter>
                <action android:name="android.intent.action.VIDEO" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- FULLSCREEN  -->
        <activity
            android:name="com.theonlyanimal.ar.FullScreenPlayback"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
 	        android:launchMode="singleTask"
            android:label="@string/app_name"
         >
            <intent-filter>
                <action android:name="android.intent.action.FULLSCREEN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
