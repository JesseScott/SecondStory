<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ContentDescription" >

    <ImageView
        android:id="@+id/menu_bg_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/menu_bg" />

    <LinearLayout
        android:id="@+id/menu_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
  	>

        <Button
            android:id="@+id/menu_guide_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="@+color/menu_btn_font_color"
            android:background="@+color/menu_btn_bg_color"
            android:text="@+string/label_guide" 
            android:textSize="30sp"
        />

        <Button
            android:id="@+id/menu_maps_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="@+color/menu_btn_font_color"
            android:background="@+color/menu_btn_bg_color"
            android:text="@+string/label_maps" 
            android:textSize="30sp"
        />

        <Button
            android:id="@+id/menu_about_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="@+color/menu_btn_font_color"
            android:background="@+color/menu_btn_bg_color"
            android:text="@+string/label_about" 
            android:textSize="30sp"
        />
        
        <Button
            android:id="@+id/menu_feedback_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="@+color/menu_btn_font_color"
            android:background="@+color/menu_btn_bg_color"
            android:text="@+string/label_feedback" 
            android:textSize="30sp"
        />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/menu_bot"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/menu_top"
        android:padding="15dp"
        android:background="@+color/menu_live_bg"
        android:orientation="vertical" >

        <Button
            android:id="@+id/menu_live_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="@+color/menu_live_font"
            android:background="@null"
            android:text="@+string/label_live" 
            android:textSize="60sp"
        />

    </RelativeLayout>

</RelativeLayout>